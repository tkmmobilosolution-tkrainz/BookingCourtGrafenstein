<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_booking_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"
                android:text="Herren 1" />

            <TextView
                android:id="@+id/tv_booking_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="7dp"
                android:text="Mittwoch" />

            <TextView
                android:id="@+id/tv_booking_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="7dp"
                android:text="12:30 - 16:30" />

            <TextView
                android:id="@+id/tv_booking_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="7dp"
                android:text="03.08.2017 - 09.10.2017" />

            <TextView
                android:id="@+id/tv_booking_court"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Platz 1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_booking_overview"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="Übersicht"
                android:layout_weight="2"
                android:theme="@style/BCButtonNormal"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="Löschen"
                android:layout_weight="1"
                android:enabled="false"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/btn_booking_delete"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:text="Löschen"
                android:layout_weight="2"
                android:theme="@style/BCButtonRed"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>